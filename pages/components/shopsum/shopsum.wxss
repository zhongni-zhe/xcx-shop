
/*主容器*/  
.stepper {  
    width: 180rpx;  
    height: 46rpx;  
    /*给主容器设一个边框*/  
    border: 1rpx solid #ccc;  
    border-radius: 6rpx;  
    margin:0 auto;  
}  
  
/*加号和减号*/  
.stepper text {  
    width: 48rpx;  
    line-height: 46rpx;  
    text-align: center;  
    float: left;  
}  
  
/*数值*/  
.stepper input {  
    width: 80rpx;  
    height: 46rpx;  
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 24rpx;  
    line-height:46rpx;
    vertical-align: middle;
    text-align: center;
    min-height:0;
    /*给中间的input设置左右边框即可*/  
    border-left: 1rpx solid #ccc;  
    border-right: 1rpx solid #ccc;  
}  
  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}  
  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
}  